{
  "name": "pathom-viz",
  "version": "1.0.0",
  "description": "Pathom visualization tools for parser development.",
  "homepage": "https://github.com/wilkerlucio/pathom-viz",
  "main": "js/background/main.js",
  "author": {
    "name": "Wilker Lucio",
    "email": "wilkerlucio@gmail.com"
  },
  "license": "MIT",
  "repository": "https://github.com:/wilkerlucio/pathom-viz.git",
  "dependencies": {
    "express": "^4.16.3",
    "socket.io": "1.7.4"
  },
  "devDependencies": {
    "electron": "^7.1.3",
    "electron-builder": "^21.2.0"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.wsscode.pathom-viz-standalone",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {}
  }
}
